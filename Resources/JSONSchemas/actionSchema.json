{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "https://4D.com",
  "title": "4D Go Mobile action schemas",
  "def": {
    "name": {
      "type": "string"
    },
    "label": {
      "type": "string",
      "minLength": 1
    },
    "shortLabel": {
      "type": "string",
      "minLength": 1
    },
    "preset": {
      "type": "string",
      "enum": [
        "add",
        "edit",
        "sort",
        "share",
        "openURL",
        "delete"
      ]
    },
    "scope": {
      "type": "string",
      "required": [
        "table",
        "currentRecord",
        "global"
      ]
    },
    "style": {
      "type": "string",
      "enum": [
        "destructive"
      ]
    },
    "identifier": {
      "type": "integer",
      "minimum": 0,
      "exclusiveMinimum": true
    },
    "icon": {
      "type": "string"
    },
    "rules": {
      "type": "array",
      "items": {
        "type": [
          "object",
          "string"
        ],
        "properties": {
          "min": {
            "type": "number"
          },
          "max": {
            "type": "number"
          },
          "mandatory": {}
        }
      }
    },
    "parameter": {
      "type": "object",
      "properties": {
        "name": {
          "$ref": "#/def/name"
        },
        "label": {
          "$ref": "#/def/label"
        },
        "shortLabel": {
          "$ref": "#/def/shortLabel"
        },
        "type": {
          "type": "string",
          "enum": [
            "string",
            "text",
            "number",
            "date",
            "time",
            "bool",
            "image"
          ]
        },
        "format": {
          "type": "string"
        },
        "defaultField": {
          "type": "string"
        },
        "fieldNumber": {
          "$ref": "#/def/identifier"
        },
        "default": {
          "type": [
            "number",
            "string"
          ]
        },
        "placeholder": {
          "type": "string"
        },
        "rules": {
          "$ref": "#/def/rules"
        }
      },
      "required": [
        "name"
      ]
    },
    "parameters": {
      "type": "array",
      "items": {
        "$ref": "#/def/parameter"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "_noPreset": {
      "not": {
        "required": [
          "preset"
        ]
      },
      "required": [
        "parameters"
      ]
    },
    "_editAddSort": {
      "properties": {
        "preset": {
          "enum": [
            "edit",
            "add",
            "sort"
          ]
        }
      },
      "required": [
        "parameters"
      ]
    },
    "_delete": {
      "properties": {
        "preset": {
          "const": "delete"
        }
      },
      "required": [
        "style"
      ]
    },
    "_share": {
      "properties": {
        "preset": {
          "const": "share"
        }
      }
    },
    "_openURL": {
      "properties": {
        "preset": {
          "const": "openURL"
        }
      },
      "required": [
        "description"
      ]
    }
  },
  "type": "object",
  "properties": {
    "name": {
      "$ref": "#/def/name"
    },
    "scope": {
      "$ref": "#/def/scope"
    },
    "label": {
      "$ref": "#/def/label"
    },
    "shortLabel": {
      "$ref": "#/def/shortLabel"
    },
    "preset": {
      "$ref": "#/def/preset"
    },
    "icon": {
      "$ref": "#/def/icon"
    },
    "tableNumber": {
      "$ref": "#/def/identifier"
    },
    "parameters": {
      "$ref": "#/def/parameters"
    },
    "style": {
      "$ref": "#/def/style"
    },
    "description": {
      "type": "string"
    }
  },
  "required": [
    "name",
    "scope",
    "label",
    "shortLabel"
  ],
  "anyOf": [
    {
      "$ref": "#/def/_noPreset"
    },
    {
      "$ref": "#/def/_delete"
    },
    {
      "$ref": "#/def/_editAddSort"
    },
    {
      "$ref": "#/def/_openURL"
    },
    {
      "$ref": "#/def/_share"
    }
  ],
  "additionalProperties": false
}
